{
    "name": "vscode-lxd",
    "displayName": "LXD",
    "description": "Makes it easy to create, manage, and inspect LXD containers.",
    "version": "0.0.3",
    "preview": true,
    "publisher": "dviererbe",
    "icon": "resources/extension-icon.png",
    "license": "AGPL-3.0-or-later",
    "author": {
        "name": "Dominik Viererbe",
        "email": "hello@dviererbe.de",
        "url": "https://www.dviererbe.de/"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/dviererbe/vscode-lxd.git"
    },
    "bugs": {
        "url": "https://github.com/dviererbe/vscode-lxd/issues"
    },
    "qna": "https://github.com/dviererbe/vscode-lxd/discussions",
    "engines": {
        "vscode": "^1.105.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "lxc",
        "lxd",
        "container",
        "containers"
    ],
    "pricing": "Free",
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "vscode-lxd.commands.refresh",
                "title": "%vscode-lxd.commands.refresh%",
                "category": "%vscode-lxd.commands.categories.generic%",
                "icon": "$(extensions-refresh)"
            },
            {
                "command": "vscode-lxd.commands.refreshInstances",
                "title": "%vscode-lxd.commands.refreshInstances%",
                "category": "%vscode-lxd.commands.categories.instances%",
                "icon": "$(extensions-refresh)"
            },
            {
                "command": "vscode-lxd.commands.refreshImages",
                "title": "%vscode-lxd.commands.refreshImages%",
                "category": "%vscode-lxd.commands.categories.images%",
                "icon": "$(extensions-refresh)"
            },
            {
                "command": "vscode-lxd.commands.refreshNetworks",
                "title": "%vscode-lxd.commands.refreshNetworks%",
                "category": "%vscode-lxd.commands.categories.networks%",
                "icon": "$(extensions-refresh)"
            },
            {
                "command": "vscode-lxd.commands.refreshStoragePools",
                "title": "%vscode-lxd.commands.refreshStoragePools%",
                "category": "%vscode-lxd.commands.categories.storagePools%",
                "icon": "$(extensions-refresh)"
            },
            {
                "command": "vscode-lxd.commands.reportIssue",
                "title": "%vscode-lxd.commands.reportIssue%",
                "category": "%vscode-lxd.commands.categories.generic%",
                "icon": "$(remote-explorer-report-issues)"
            }
        ],
        "configuration": [
            {
                "title": "%vscode-lxd.configuration.title%",
                "properties": {
                    "lxd.daemonUnixSocketPath": {
                        "type": "string",
                        "default": "",
                        "scope": "machine",
                        "description": "%vscode-lxd.configuration.properties.daemonUnixSocketPath.description%"
                    },
                    "lxd.refreshInterval": {
                        "type": "integer",
                        "default": 15,
                        "scope": "window",
                        "description": "%vscode-lxd.configuration.properties.refreshInterval.description%"
                    },
                    "lxd.suppressUnsupportedEnvironmentErrors": {
                        "type": "boolean",
                        "default": false,
                        "scope": "window",
                        "description": "%vscode-lxd.configuration.properties.suppressUnsupportedEnvironmentErrors.description%"
                    }
                }
            }
        ],
        "menus": {
            "issue/reporter": [
                {
                    "command": "vscode-lxd.commands.reportIssue"
                }
            ],
            "view/title": [
                {
                    "command": "vscode-lxd.commands.refreshInstances",
                    "when": "view == vscode-lxd.views.instances",
                    "group": "navigation"
                },
                {
                    "command": "vscode-lxd.commands.refreshImages",
                    "when": "view == vscode-lxd.views.images",
                    "group": "navigation"
                },
                {
                    "command": "vscode-lxd.commands.refreshNetworks",
                    "when": "view == vscode-lxd.views.networks",
                    "group": "navigation"
                },
                {
                    "command": "vscode-lxd.commands.refreshStoragePools",
                    "when": "view == vscode-lxd.views.storagePools",
                    "group": "navigation"
                }
            ]
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "vscode-lxd",
                    "title": "%vscode-lxd.views.activitybar%",
                    "icon": "resources/lxd-logo-outline.svg"
                }
            ]
        },
        "views": {
            "vscode-lxd": [
                {
                    "id": "vscode-lxd.views.instances",
                    "name": "%vscode-lxd.views.instances%",
                    "icon": "resources/lxd-logo-outline.svg"
                },
                {
                    "id": "vscode-lxd.views.images",
                    "name": "%vscode-lxd.views.images%",
                    "icon": "resources/lxd-logo-outline.svg"
                },
                {
                    "id": "vscode-lxd.views.networks",
                    "name": "%vscode-lxd.views.networks%",
                    "icon": "resources/lxd-logo-outline.svg",
                    "visibility": "collapsed"
                },
                {
                    "id": "vscode-lxd.views.storagePools",
                    "name": "%vscode-lxd.views.storagePools%",
                    "icon": "resources/lxd-logo-outline.svg",
                    "visibility": "collapsed"
                },
                {
                    "id": "vscode-lxd.views.help",
                    "name": "%vscode-lxd.views.help%",
                    "icon": "resources/lxd-logo-outline.svg"
                }
            ]
        }
    },
    "capabilities": {
        "untrustedWorkspaces": {
            "supported": true
        },
        "virtualWorkspaces": true
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint --max-warnings 0 src",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.10",
        "@types/node": "22.x",
        "@types/vscode": "^1.105.0",
        "@typescript-eslint/eslint-plugin": "^8.45.0",
        "@typescript-eslint/parser": "^8.45.0",
        "@vscode/test-cli": "^0.0.11",
        "@vscode/test-electron": "^2.5.2",
        "@vscode/vsce": "^3.6.2",
        "eslint": "^9.36.0",
        "ovsx": "^0.10.6",
        "ts-loader": "^9.5.4",
        "typescript": "^5.9.3",
        "webpack": "^5.102.0",
        "webpack-cli": "^6.0.1"
    },
    "dependencies": {
        "axios": "^1.12.2"
    }
}
